    %head
        %title the other guys music
        %base{href: "/"}
        %link{:href => "", :rel => "canonical"}
        %meta(http-equiv="content-type" content="text/html" charset="utf-8")
        %meta(http-equiv="x-ua-compatible" content="ie=edge,chrome=1")
        %meta(name="description" content="the other guys jams")
        %meta(name="author" content="Evan Albert")
        %meta{content: "theotherguysmusic.surge.sh", property: "og:url"}
        %meta{content: "the other guys jams", property: "og:description"}
        %meta{content: "the other guys music", property: "og:title"}
        %meta{content: "https://production-whitelabel.imgix.net/media/mixtapes/mixtapebeach.png", property: "og:image"}
        %meta{content: "the other guys music", property: "og:site_name"}
        %meta{:content => "app", :name => "twitter:card"}
        %meta{:content => "theotherguysmusic.surge.sh", :name => "twitter:site"}
        %meta{:content => "the other guys jams", :name => "twitter:description"}
        %meta{:content => "US", :name => "twitter:app:country"}

        -# Standard viewport tag to set the viewport to the device's width,
        -# Android 2.3 devices need this so 100% width works properly and
        -# doesn't allow children to blow up the viewport width
        %meta{content: "initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width", name: "viewport"}

        -# Fix for iPhone 5 fullscreen web apps
        %meta(name="viewport" content="initial-scale=1.0,user-scalable=no,maximum-scale=1" media="(device-height: 568px)")
        %meta(name='apple-mobile-web-app-capable' content='yes')
        %meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')

        -# App Icons
        %link(rel="shortcut icon" href="#{image_path("favicon.png")}")
        %link(rel="apple-touch-icon" href="#{image_path('favicon.png')}" )

        -# Stylesheets
        = stylesheet_link_tag 'main'
        = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'
        = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Open+Sans'

        %body{"ng-app" => "App"}
            = yield

        %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"}
        :javascript
            window.jQuery || document.write('<script src="js/vendor/jquery-1.8.0.min.js"><\/script>')

        = javascript_include_tag 'main'

